{% extends 'base.html.twig' %}

{% block title %}Hello EmployeController!{% endblock %}

{% block body %}
    <h1>Liste des employés</h1>
    <p>
        <a class="btn btn-primary"href="{{ path("add_employe")}}">Ajouter un(e) employé(e)</a><br>
    </p>

    {% for employe in employes %}
        <a href="{{ path('show_employe', {'id': employe.id}) }}">{{employe}} employé par {{ employe.entreprise}}</a>
        <a class="btn btn-warning" href="{{ path('edit_employe', {'id': employe.id}) }}">éditer</a>
        <a class="btn btn-danger" href="{{ path('delete_employe', {'id': employe.id}) }}">supprimer</a>
    {% endfor %}
{% endblock %}
